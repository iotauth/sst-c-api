#!/usr/bin/env bash
set -euo pipefail
here="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

if [[ $# -lt 1 ]]; then
  echo "Usage: $0 {pico|pi4} [--no-clean]" >&2
  exit 1
fi

target="$1"
noclean="${2:-}"

"$here/set_build" "$target" >/dev/null
# shellcheck disable=SC1090
source "$here/.build_target"

build_dir="$here/build/${OUT_DIR:-$BUILD_TARGET}"

if [[ "$noclean" != "--no-clean" ]] && [[ -d "$build_dir" ]]; then
  echo "ðŸ§¹ Cleaning build/${OUT_DIR:-$BUILD_TARGET}"
  rm -rf "$build_dir"
fi

"$here/make_build"
